{
  "name": "birch-and-bark-retreat",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "biome check . && oxlint .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "seo:sitemap": "bun run scripts/seo/sitemap.ts",
    "seo:robots": "bun run scripts/seo/robots.ts",
    "seo:validate": "bun run scripts/seo/schema.ts",
    "seo:lighthouse-compare": "bun run scripts/seo/lighthouse-compare.ts",
    "seo:all": "bun run seo:sitemap && bun run seo:robots && bun run seo:validate",
    "seo:competitors": "bun run scripts/seo/competitors.ts",
    "deploy": "bun run build && wrangler pages deploy dist --project-name birch-and-bark-retreats",
    "deploy:preview": "bun run build && wrangler pages deploy dist --project-name birch-and-bark-retreats --branch preview"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@valentini/seo-tools": "github:jvalentini/seo-tools#36ad12a",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "^1.3.7",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "oxlint": "^1.38.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5"
  }
}
